<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/cuno_img_pause"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cuno_title_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingLeft="10dp"
            android:text="ten bai hat"
            android:textStyle="bold"
            android:textSize="25dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/cuno_img_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/baseline_clear_24" />

    <ImageView
        android:id="@+id/cuno_img_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@+id/cuno_img_clear"
        android:src="@drawable/baseline_pause_circle_24" />


</RelativeLayout>