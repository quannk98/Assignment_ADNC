<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="Sửa Thông Tin Bài Hát"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/b2"
        android:layout_below="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Tên Bài Hát"
        />
    <EditText
        android:id="@+id/dialogmusic_suatenbaihat"
        android:layout_below="@+id/b2"
        android:layout_width="350dp"
        android:layout_marginLeft="20dp"
        android:hint="Tên bài hát"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custome_listview"
        android:layout_height="50dp"
        />
    <TextView
        android:id="@+id/b3"
        android:layout_below="@+id/dialogmusic_suatenbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Link Bài Hát"
        />
    <EditText
        android:id="@+id/dialogmusic_sualinknhac"
        android:layout_below="@+id/b3"
        android:layout_width="350dp"
        android:layout_marginLeft="20dp"
        android:hint="Link bài hát"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custome_listview"
        android:layout_height="50dp"
        />

    <Button
        android:id="@+id/dialogmusic_btnsua"
        android:layout_below="@+id/dialogmusic_sualinknhac"
        android:layout_margin="20dp"
        android:text="Cập Nhật"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</RelativeLayout>