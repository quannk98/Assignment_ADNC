<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen_Login">
    <TextView
        android:id="@+id/tv_dp"
        android:text="Đăng Nhập"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/login_edtenDangNhap"
        android:background="@drawable/custome_listview"
        android:layout_below="@+id/tv_dp"
        android:hint="Tên Đăng Nhập"
        android:paddingLeft="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/login_edMatKhau"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/login_edtenDangNhap"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:background="@drawable/custome_listview"
        android:hint="Mật Khẩu"
        android:paddingLeft="10dp" />
    <CheckBox
        android:id="@+id/login_cbluutaikhoan"
        android:layout_below="@+id/login_edMatKhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/a1"
        android:layout_below="@+id/login_edMatKhau"
        android:text="Lưu Tài Khoản"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/login_cbluutaikhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/login_btnDangNhap"
        android:layout_below="@+id/a1"
        android:text="Đăng Nhập"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="150dp"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/login_btnDangKy"
        android:layout_below="@+id/a1"
        android:text="Đăng Ký"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/login_btnDangNhap"
        android:layout_marginLeft="50dp"
        android:layout_width="150dp"
        android:layout_height="50dp"/>


</RelativeLayout>